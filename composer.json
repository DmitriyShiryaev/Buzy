{
    "name": "grom/buzy",
    "description": "Web client on top of Symfony2 HTTP foundation",
    "require": {
        "symfony/http-foundation": "2.1.*"
    },
    "require-dev": {
        "symfony/event-dispatcher": "2.1.*",
        "symfony/browser-kit": "2.1.*",
        "doctrine/common": "2.2.*"
    },
    "suggest": {
        "symfony/event-dispatcher": "Handle events before and after request",
        "symfony/browser-kit": "Enable Cookie Jar",
        "doctrine/common": "Enable HTTP cache"
    },
    "autoload": {
        "psr-0": {
            "Buzy": "src/"
        }
    },
    "authors": [
        {
            "name": "Jérôme Tamarelle",
            "email": "jerome@tamarelle.net"
        }
    ]
